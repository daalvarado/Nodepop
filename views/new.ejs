<% include partials/header %>


    <div class="container">
        <div class="row2">
            <h1 class="text-uppercase" style="text-align: center; margin:50px;">Create a new Ad</h1>
            <div style="width: 50%; margin: 25px auto;">
                <form action="/" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="price" placeholder="price">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="picture" placeholder="image url">
                    </div>
                    <!-- <input class="form-control-sm" type="text" name="tags" placeholder="tags"> -->
                    <div class="form-group">
                        <select class="form-control" name="sale" placeholder="sale">
                            <option value="true">true</option>
                            <option value="false">false</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="tags" placeholder="tags - separated by commas - lowercase - no quotation marks">
                    </div>
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-block">Submit!</button>
            </div>
            </form>
        </div>
    </div>


    </div>



    <% include partials/footer %>